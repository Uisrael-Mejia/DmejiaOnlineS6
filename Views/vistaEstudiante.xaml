<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DmejiaOnlineS6.Views.vistaEstudiante"
             Title="vistaEstudiante">

    <VerticalStackLayout Padding="20" Spacing="10">

        <Label Text="Semana 6: SERVICIOS WEB"
               FontSize="18"
               HorizontalOptions="Center"
               Margin="0,0,0,10"/>

        <!-- ENCABEZADOS -->
        <Grid BackgroundColor="blue" Padding="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="60" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="80" />
            </Grid.ColumnDefinitions>

            <Label Text="Codigo" Grid.Column="0" FontAttributes="Bold"/>
            <Label Text="Nombre" Grid.Column="1" FontAttributes="Bold"/>
            <Label Text="Apellido" Grid.Column="2" FontAttributes="Bold"/>
            <Label Text="Edad" Grid.Column="3" FontAttributes="Bold"/>
        </Grid>

        <!-- LISTA -->
        <ListView x:Name="listaEstudiantes"
          ItemSelected="listaEstudiantes_ItemSelected_1"
          SeparatorVisibility="None"
          HasUnevenRows="True">

            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid Padding="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="80" />
                            </Grid.ColumnDefinitions>

                            <Label Text="{Binding codigo}" Grid.Column="0"/>
                            <Label Text="{Binding nombre}" Grid.Column="1"/>
                            <Label Text="{Binding apellido}" Grid.Column="2"/>
                            <Label Text="{Binding edad}" Grid.Column="3"/>
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>

        </ListView>

        <Button x:Name="btnAgregar" Text="Agregar Estudiantes"
                Clicked="btnAgregar_Clicked_1"
                BackgroundColor="blue"
                TextColor="white"
                CornerRadius="5"
                Padding="10">
        </Button>

    </VerticalStackLayout>
</ContentPage>

<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DmejiaOnlineS6.Views.vistaActualizarEliminar"
             Title="vistaActualizarEliminar">
    <VerticalStackLayout Padding="20" Spacing="20">
        <Label 
            Text="Ventana para actualizar y eliminar"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry x:Name="txtCodigo"
               IsEnabled="False"
               />
        <Entry x:Name="txtNombre"
               Placeholder="Actualice el nombre"/>
        <Entry x:Name="txtApellido"
                Placeholder="Actualice el apellido"/>
        <Entry x:Name="txtEdad"
                Placeholder="Actualice la edad"/>
        <Button x:Name="btnActualizar"
                Text="Actualizar Estudiante"
                Clicked="btnActualizar_Clicked_1"
                BackgroundColor="blue"
                TextColor="white"
                CornerRadius="5"
                Padding="10"/>
        <Button x:Name="btnEliminar"
                Text="Eliminar Estudiante"
                Clicked="btnEliminar_Clicked"
                BackgroundColor="red"
                TextColor="white"
                CornerRadius="5"
                Padding="10"/>
    </VerticalStackLayout>
</ContentPage>